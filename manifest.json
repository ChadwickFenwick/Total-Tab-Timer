{
  "manifest_version": 3,
  "name": "Total Tab Timer",
  "version": "1.0.1",
  "description": "Automatically close tabs with countdown timers or scheduled times. Boost productivity and manage tab clutter with ease.",
  "author": "Tab Timer Team",
  "homepage_url": "https://github.com/ChadwickFenwick",
  "permissions": [
    "tabs",
    "alarms",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Total Tab Timer - Set timers to close tabs",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "minimum_chrome_version": "88",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}